{
    "compilerOptions": {
        "module": "ESnext",
        "moduleResolution": "node",
        "target": "ESnext",
        "checkJs": true,
        "baseUrl":"./",
        "jsx":"preserve",
        "jsxImportSource": "atomico",
        "paths": {
            "@devserver/*": ["packages/*/src"],
        }
    },
    "include": [
        "packages/**/*",
        "example/**/*"
    ],
    "exclude": [
        "**/rollup.config.js"
    ]
}